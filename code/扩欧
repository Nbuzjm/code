void exgcd(ll a,ll b,ll &x,ll &y)
{
    if(!b){x=1;y=0;return;}
    exgcd(b,a%b,x,y);
    ll X=x;
    x=y; y=X-a/b*y;
}
ll INV(ll a,ll mod)
{
    ll x,y;
    exgcd(a,mod,x,y);
    return (x+mod)%mod;
}